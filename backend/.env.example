# --- Environnement ---
NODE_ENV=development
API_PORT=3000

# --- CORS Configuration ---
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH

# --- Backend ---
DB_HOST=localhost
DB_PORT=5433
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Frontend URLs for CORS
FRONTEND_URL_DEV=http://localhost:5173
FRONTEND_URL_PROD=https://blablabook.online
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# --- Postgres ---
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db
POSTGRES_PORT=5432
POSTGRES_TEST_PORT=5433

# JWT - GENERATE A STRONG SECRET IN PRODUCTION
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_SECRET_HERE

# --- Cloudinary Configuration ---
# Get these values from your Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=blablabookv2